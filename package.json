{
  "name": "doom-vip-iptv",
  "version": "1.0.0",
  "private": true,
  "description": "Premium IPTV service website with multi-language support and dark mode",
  "keywords": [
    "iptv",
    "streaming",
    "nextjs",
    "multilingual",
    "dark-mode"
  ],
  "author": "DOOM VIP IPTV",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true next build",
    "export": "next build && next export",
    "clean": "rm -rf .next out",
    "clean:win": "rmdir /s /q .next && rmdir /s /q out",
    "fresh-start": "npm run clean:win && npm run dev",
    "fresh-build": "npm run clean:win && npm run build && npm start",
    "export": "next build && next export",
    "build:static": "cp next.config.static.js next.config.js && npm run build && npm run export",
    "test:build": "npm run build && npm run start"
  },
  "dependencies": {
    "@next/third-parties": "^15.0.0",
    "clsx": "^2.1.0",
    "next": "^15.0.0",
    "next-intl": "^3.22.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "fs-extra": "^11.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0"
  }
}
